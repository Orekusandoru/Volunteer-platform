<p style="color: green"></p>

<h1>All requests</h1>
<table class="table table-dark table-bordered border-info table-striped ">
  <thead class="table-primary border-success">
    <tr>
      <th scope="col">Category</th>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Text</th>
      <th scope="col">Edit</th>
    </tr>
  </thead>

 
  <tbody>
    <div id="requests" >
      <% @requests.each do |request| %>
        <tr>
          <td><%= request.category %></td>
          <td><%= request.first_name %></td>
          <td><%= request.last_name %></td>
          <td><%= request.email %></td>
          <td><%= request.phone %></td>
          <td><%= truncate(request.text_of_request, length: 100, separator: '...') %></td>
          <td>
            <p>
              <%= link_to "Show this request", request %>
            </p></td>
        </tr>
        
      <% end %>
    </div>
  </tbody>
</table>

<% unless current_user.admin_permit %>
  <%=  link_to "New request", new_request_path, class:"btn btn-primary"  %>
<% end %>
  


